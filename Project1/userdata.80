#! /bin/bash
sudo yum update -y
sudo yum install -y httpd
sudo service httpd start  
sudo systemctl enable httpd
echo "<h1>Welcome to $(curl -s http://169.254.169.254/latest/meta-data/public-hostname) Server ! </h1>"| sudo tee /var/www/html/index.html
sudo bash -c 'echo "<h2>This Server is in $(curl -s http://169.254.169.254/latest/meta-data/placement/availability-zone) Avalability zone! </h2>">> /var/www/html/index.html'